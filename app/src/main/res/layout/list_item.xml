<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:paddingLeft="@dimen/margin16"
    android:paddingRight="@dimen/margin16"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/width250"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin16"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/product_name"
            android:text="Product name"
            android:textStyle="bold"
            android:paddingTop="@dimen/padding10"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/product_quantity"
                android:text="Quantity"
                android:paddingTop="@dimen/padding10"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/product_price"
                android:text="Price"
                android:paddingTop="@dimen/padding10"
                android:textAlignment="textEnd"
                />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/sale_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/sale_button_text"
        android:textSize="@dimen/text_sale_button"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

</LinearLayout>